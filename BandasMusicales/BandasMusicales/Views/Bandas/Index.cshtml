@model IEnumerable<BandasMusicales.Models.Banda>

@{ 
    ViewData["Title"] = "Lista de Bandas Musicales:";

    <h2>Lista de Bandas Musicales:</h2>

    <p>
        <a asp-action="Create" class="btn btn-success">Añadir</a>

        <table>

            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.BandaName)
                    </th>
                    <th></th>
                </tr>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.BandaName)</td>
                        <td>
                            <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.BandaId">Modificar</a>
                            <a asp-action="Details" class="btn btn-success" asp-route-id="@item.BandaId">Mostar</a>
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.BandaId">Eliminar</a>
                        </td>
                    </tr>

                }
            </tbody>

            </thead>

        </table>
    </p>
}
    
